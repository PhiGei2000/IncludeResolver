<UserControl x:Class="IncludeResolver.Elements.IncludeNodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IncludeResolver.Elements"
             mc:Ignorable="d" >
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <TreeView x:Name="output">
            <TreeView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Expand all nodes"  
                              Click="MenuItem_ExpandAll_Click" />
                    <MenuItem Header="Unexpand all nodes"
                              Click="MenuItem_UnexpandAll_Click" />
                </ContextMenu>
            </TreeView.ContextMenu>
        </TreeView>
    </ScrollViewer>
</UserControl>
